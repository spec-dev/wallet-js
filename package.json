{
    "name": "@spec.dev/wallet-client",
    "version": "0.0.2",
    "description": "Spec wallet client",
    "keywords": [
        "javascript",
        "typescript",
        "wallet",
        "spec"
    ],
    "homepage": "https://github.com/spec-dev/wallet-js",
    "bugs": "https://github.com/spec-dev/wallet-js/issues",
    "license": "MIT",
    "author": "Spec",
    "files": [
        "dist",
        "src"
    ],
    "main": "dist/main/index.js",
    "module": "dist/module/index.js",
    "repository": "spec-dev/wallet-js",
    "scripts": {
        "clean": "rimraf dist",
        "format": "prettier --write \"{src,test}/**/*.ts\"",
        "build": "genversion src/lib/version.ts --es6 && run-s clean format build:*",
        "build:main": "tsc -p tsconfig.json",
        "build:module": "tsc -p tsconfig.module.json",
        "types-generate": "dts-gen -m '@spec.dev/wallet-client' -s",
        "test": "jest --runInBand"
    },
    "dependencies": {
        "@walletconnect/web3-provider": "^1.7.1",
        "walletlink": "^2.4.6",
        "web3": "^1.7.0",
        "web3modal": "^1.9.5"
    },
    "devDependencies": {
        "@types/jest": "^26.0.13",
        "@types/jsonwebtoken": "^8.5.6",
        "@types/node": "^14.14.7",
        "@types/node-fetch": "^2.5.7",
        "@types/prop-types": "^15.7.4",
        "@types/react": "^17.0.38",
        "faker": "^5.3.1",
        "genversion": "^3.0.1",
        "husky": "^4.3.0",
        "jest": "^27.3.1",
        "jsonwebtoken": "^8.5.1",
        "npm-run-all": "^4.1.5",
        "prettier": "2.4.1",
        "pretty-quick": "^3.1.0",
        "rimraf": "^3.0.2",
        "ts-jest": "^27.0.7",
        "typedoc": "^0.22.7",
        "typescript": "^4.0.2"
    },
    "husky": {
        "hooks": {
            "pre-commit": "pretty-quick --staged"
        }
    }
}
